/* pages/search/search.wxss */
page {
  background-color: #fafafa;
}

/* search-head */
.search-head {
  padding: 23.4rpx 28.08rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.search-head .search-head_left {
  width: 88%;
  height: 56.16rpx;
  background-color: #fff; 
  border-radius: 23.4rpx;
  display: flex;
  align-items: center;
  padding: 0 11.7rpx;
  box-sizing: border-box;
}
.search-head .search-head_left icon {
  margin-right: 11.7rpx;
}
.search-head .search-head_left input {
  flex: 1;
  font-size: 28.08rpx;
}
.search-head .search-head_right {
  font-size: 30.02rpx;
  color: #4f4f4f;
}

/* search-wrap */
.search-promotion-title,
.search-category-title {
  font-weight: bold;
  font-size: 30.02rpx;
  padding: 0 28.08rpx 14.04rpx;
}
.search-promotion-list image {
  width: 100%;
  height: 243.36rpx;
}
.search-promotion-list .list-wrap {
  padding: 11.7rpx  28.08rpx 0;
  display: flex;
  flex-wrap: wrap;
}
.search-promotion-list .list-wrap-item {
  font-size: 28.08rpx;
  color: #202020;
  background-color: #fff;
  padding: 7.02rpx 11.7rpx;
  border-radius: 28.08rpx;
  margin-right: 17.5rpx;
  margin-bottom: 17.5rpx;
}
.search-category {
  margin-top: 58.5rpx;
}
.search-category-list {
  padding: 11.7rpx  28.08rpx 0;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
} 
.search-category-list .list-item {
  width: 18%;
  padding: 7.02rpx 0;
  background-color: #f5f5f5;
  text-align: center;                   
  font-size: 28.08rpx;
  margin-bottom: 17.5rpx;          
  margin-left: 11.7rpx;
}

/* search-history */
.search-history-title {
  font-size: 12px;
  color: #999;
  padding: 0 28.08rpx 18.72rpx;
}
.search-history-content {
  background-color: #fff;
  padding: 0 28.08rpx;
  font-size: 14px;
}
.search-history-item,
.search-history-clear {
  padding: 18.72rpx 0;
}
.search-history-item {
  border-bottom: 1px solid #e5e5e5;
}
.search-history-clear {
  text-align: center;
  color: #607091;
}